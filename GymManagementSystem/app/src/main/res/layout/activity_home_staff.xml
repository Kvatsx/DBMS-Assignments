<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="50dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/update_profile_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="updateProfileStaff"
        android:text="Update Profile"/>

    <Button
        android:id="@+id/view_profile_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="viewProfileStaff"
        android:text="View Profile"/>

    <Button
        android:id="@+id/view_staff_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:onClick="viewAllStaff"
        android:padding="10dp"
        android:text="All Staff" />

    <Button
        android:id="@+id/view_customer_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="viewAllCustomers"
        android:text="All Customers"/>

    <Button
        android:id="@+id/add_equipment_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="addEquipmentFunction"
        android:text="Add Equipment"/>

    <Button
        android:id="@+id/view_equipment_button_customer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="viewEquipmentFunction"
        android:text="View Equipments"/>

</LinearLayout>